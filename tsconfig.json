{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@class-validator-monorepo/api-interfaces": [ "libs/api-interfaces/src/index.ts" ],
      "@class-validator-monorepo/core": [ "libs/api-interfaces/src/lib/core/index.ts" ],
      "@class-validator-monorepo/shared-ui": ["libs/shared-ui/src/index.ts"],
      "@class-validator-monorepo/nest-shared": [ "libs/nest-shared/src/index.ts" ],
      "@class-validator-monorepo/nest-database": [ "libs/nest-database/src/lib/index.ts" ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
